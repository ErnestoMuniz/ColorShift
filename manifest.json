{
  "manifest_version": 3,
  "name": "ColorShift",
  "description": "Helping color blind people see better.",
  "version": "1.0.0",
  "icons": {
    "128": "icon_logo.png"
  },
  "action": {
    "default_icon": "icon_logo.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": ["<all_urls>"],
      "js": ["colorblinding.js"]
    }
  ],
  "permissions": ["scripting", "storage", "tabs", "activeTab"],
  "host_permissions": ["<all_urls>"]
}
